# Jekyll 依赖管理文件
# 这个文件定义了构建 Jekyll 网站所需的 Ruby gem 依赖

source "https://rubygems.org"

# Jekyll 核心
gem "jekyll", "~> 4.3"

# GitHub Pages 兼容性
gem "github-pages", group: :jekyll_plugins

# 主题支持
gem "jekyll-theme-minimal"

# RSS 生成插件
gem "jekyll-feed", "~> 0.12"

# 其他有用的插件（可选）
gem "jekyll-sitemap"
gem "jekyll-seo-tag"

# 本地开发依赖
group :development do
  gem "bundler"
end

# 如果需要本地预览，取消注释以下行
# group :jekyll_plugins do
#   gem "jekyll-feed", "~> 0.12"
# end
